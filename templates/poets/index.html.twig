{% extends 'base.html.twig' %}

{% block title 'Mélangeur de vers' %}

{% block body %}

<div class="relative h-screen overflow-x-hidden">
    <section class="flex w-[90%]">
        <div class="h-screen overflow-hidden | w-56 bg-gray-100 border-r border-grey-400 | flex flex-col | px-4 py-4">
            <div class="flex items-center | mb-20">
                <a href="{{ path('app_home') }}">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                    </svg>

                </a>
                <a href="{{ path('app_poets_create') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
                    </svg>
                </a>
            </div>

            <div>
                <div class="mb-10" {{ react_component('Select', {}) }}></div>
                <div {{ react_component('Button', {'text': 'Mélanger', 'classes': 'bg-blue-400 text-white w-full'}) }}></div>
            </div>
        </div>
        <div class="h-screen overflow-auto | flex-1 px-6 py-4">
            <h1> Mélangeur de vers</h1>
            <p>Sélectionnez les poètes.esses que vous souhaitez mélanger.</p>
            <small>{{ pluralize(poets|length, 'poète') }}</small>
            
            {% for poet in poets %}
                <div>
                    <div {{ react_component('List', 
                        { 
                            'fullName': poet.fullName , 
                            'description': poet.description,
                            'link': path('app_poets_show', {id: poet.id}) 
                        }) 
                    }}></div>
                </div>
            {% endfor %}
        </div>
    </section>
    <div {{ react_component('Panel',  {
        'content' : 'Mon contenu mis à jour ici'
    }) }}></div>

</div>

{% endblock %}
